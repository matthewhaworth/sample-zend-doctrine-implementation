<?php
class Application_View_Helper_StartColumn extends Zend_View_Helper_Abstract
{
    public function startColumn($class = null, $id = null)
    {
        $div = "<div";
        
        if (!is_null($class)) {
            $div .= " class='{$class}'";
        }
        
        if (!is_null($id)) {
            $div .= " id='{$id}'";
        }
        
        $div .= ">";
        
        return $div;
    }
}