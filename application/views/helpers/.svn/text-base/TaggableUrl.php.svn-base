<?php
class Application_View_Helper_TaggableUrl extends Zend_View_Helper_Abstract
{
    public function taggableUrl(Application_Model_Entities_Taggable_Abstract $taggable)
    {
        $type = str_replace('_', '-', $taggable->getType());
        
        switch (str_replace('Proxy', '', lcfirst(end(explode('_', get_class($taggable)))))) {
            default:
                return "/{$type}/view/taggable/{$taggable->getCode()}";
        }
    }
}
