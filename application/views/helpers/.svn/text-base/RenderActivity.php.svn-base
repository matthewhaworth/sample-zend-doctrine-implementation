<?php
class Application_View_Helper_RenderActivity extends Application_View_Helper_RenderAbstract
{
    protected function _getMessageXmlPath()
    {
        return APPLICATION_PATH . '/data/activityMessages.xml';
    }
    
    public function renderActivity(Application_Model_Entities_Activity $activity, $perspective)
    {
        return $this->_render($activity, $perspective);
    }
}